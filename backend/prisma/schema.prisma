generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String  @id @default(uuid())
  email     String  @unique
  password  String
  name      String
  role      Role    @default(USER)
  companyId String
  company   Company @relation(fields: [companyId], references: [id])
}

model Company {
  id    String @id @default(uuid())
  name  String @unique
  users User[]
}

enum Role {
  USER
  ADMIN
}
